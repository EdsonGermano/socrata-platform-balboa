# Overload Default Balboa Properties
########################################

cassandra.servers = {{ CASSANDRAS }}
cassandra.keyspace = Metric2012
balboa.datastore = cassandra

# Kafka Properties
########################################

zookeeper.connect = {{ ZOOKEEPERS }}
zookeeper.session.timeout.ms = 1000000
group.id = balboa-kafka-consumer

# Balboa defined Kafka Properties
# The topic this specific service will be listening for
balboa.kafka.topic = {{ TOPIC }}
# The default number of partitions for a topic
balboa.kafka.topic.partitions = {{ THREADS }}

# Balboa Consumer Properties
########################################

# The amount of time (ms) that a thread is allotted to wait before continuing to consume messages
balboa.kafka.consumer.waittime = 1000
